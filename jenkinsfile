pipeline{
    agent any
    stages{
        stage("Git checkout"){
            steps{
                git branch: 'main', url: 'https://github.com/debiashapatra/DemoprojectPipeline.git'
            }
        }
        stage("UNIT testing"){
            steps{
                bat 'mvn test'
            }
        }
        stage("Integration test"){
            steps{
                bat 'mvn verify -DskipUnitTests'
            }
        }
        stage("Building Jar"){
            steps{
                bat 'mvn clean install'
            }
        }
    }
}